<div class="row">
  {{#each transferencias}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ Retiro }} <a href="/transferencias/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ saldo }} </p>
        <p>{{ fecha }} </p>
        <p>{{ id }} </p>
        <!-- DELETE REQUEST -->
        <form action="/transferencias/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">Todos las transferencias.</p>
      <a href="/transferencias/add" class="btn btn-success btn-block">AÃ±adir Transferencias</a>
    </div>
  </div>
  {{/each}}
</div>