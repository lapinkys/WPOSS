<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nueva Transferencia</h3>
    </div>
    <div class="card-body">
      <form action="/transferencias/new-note" method="POST">
        <div class="form-group">
          <input type="text" name="retiro" class="form-control" placeholder="retiro" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="id" class="form-control" placeholder="Cedula de la persona hace la transferencia" autofocus/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

