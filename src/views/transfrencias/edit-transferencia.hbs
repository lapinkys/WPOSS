{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Transferencia</h3>
    </div>
    <div class="card-body">
      <form action="/transferencias/edit-transferencia/{{transferencia._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="retiro" class="form-control" value="{{transferencia.retiro}}"/>
        </div>
        <div class="form-group">
          <input type="text" name="saldo" class="form-control" value="{{transferencia.saldo}}"/>
        </div>
        <div class="form-group">
          <input type="text" name="fecha" class="form-control" value="{{transferencia.fecha}}"/>
        </div>
        <div class="form-group">
          <input name="id" class="form-control">{{transferencia.id}}</input>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
